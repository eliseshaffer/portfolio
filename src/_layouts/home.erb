---
layout: default
paginate:
  collection: posts
  per_page: 4
---

<%= yield %>

<h2 class="margin-top-2">Latest from <a href="/posts">The Blog</a></h2>
<ul class="blog-list">
  <% paginator.resources.each do |post| %>
    <li>
      <article>
        <h3>
          <a href="<%= post.relative_url %>">
            <%= post.data.title %>
          </a>
        </h3>
        <em>
          <%= post.data.date.strftime("%B %-d, %Y") %>
        </em>
        <p>
          <%= post.data.excerpt + ".." %>
        </p>
      </article>
    </li>
    <% end %>
</ul>

<a href="/posts">View All Posts</a>

<%= render "contact_form" %>
