<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<% resource_title = strip_html(strip_newlines(title)) %>
<title><% if resource_title != "Index" %><%= resource_title %> | <%= metadata.title %><% else %><%= metadata.title %>: <%= metadata.tagline %><% end %></title>

<meta name="description" content="<%= metadata.description %>" />

<meta property="og:title" content="<%= resource_title %>"/>
<meta property="og:description" content="<%= resource.data.summary %>" />
<% if resource.data.banner_image_url %>
  <meta property="og:image" content="<%= metadata.url %>/images/<%= resource.data.banner_image_url %>" />
<% end %>
<meta property="og:locale" content="en_US" />
<meta property="og:site_name" content="Elise SHaffer" />

<link rel="stylesheet" href="<%= webpack_path :css %>" />
<script src="<%= webpack_path :js %>" defer></script>
<%= live_reload_dev_js %>
